# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321

# Authorization Mode
# Options: open, whitelist, admin_approval, closed
# - open: любой может получить конфиг (по умолчанию)
# - whitelist: только пользователи из ALLOWED_USER_IDS
# - admin_approval: пользователи запрашивают доступ, админы одобряют
# - closed: только админы могут получать конфиги
AUTH_MODE=whitelist

# Allowed User IDs (comma-separated, для режима whitelist)
ALLOWED_USER_IDS=123456789,987654321

# WGDashboard Configuration
WGDASHBOARD_URL=http://wgdashboard:10086
WGDASHBOARD_API_KEY=your_api_key_here
WGDASHBOARD_CONFIG_NAME=wg0

# Service Manager Configuration
SERVICE_MANAGER_PORT=3000
SERVICE_MANAGER_SECRET=your_secret_key_here

# WireGuard Configuration
WG_DNS=1.1.1.1
WG_ENDPOINT=your.server.ip.address:51820
WG_ALLOWED_IPS=0.0.0.0/0
WG_KEEPALIVE=21
WG_MTU=1420

# Retry/Delay tuning for /getconfig
WG_CONFIG_APPLY_DELAY_MS=2000
WG_CONFIG_RETRY_DELAY_MS=1000

# Link Configuration
LINK_EXPIRY_HOURS=24
LINK_DOMAIN=http://localhost:3000

# Database
DB_PATH=/app/data/database.sqlite
AUTH_DB_PATH=/app/data/auth.sqlite
